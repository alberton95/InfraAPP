<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context="br.com.appinfra.appinfra.views.InsertDescriptionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUASE LÁ!"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginTop="20dp"
            android:textColor="#FFF"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insira as descrições."
            android:textColor="#FFF"
            android:textSize="12sp"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/insertext" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DIGITE O TITULO"
            android:textColorHint="#FFF"
            android:textColor="#FFF"
            android:id="@+id/etTitle"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DIGITE A DESCRIÇÃO!"
            android:textColorHint="#FFF"
            android:textColor="#FFF"
            android:id="@+id/etDescription"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btNext"
            android:layout_marginTop="30dp"
            android:text="ENVIAR! "
            android:onClick="sendComplaint"
            android:layout_gravity="center"/>

    </LinearLayout>
</LinearLayout>
